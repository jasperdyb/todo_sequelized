extend layouts/main

block styles
  link(rel="stylesheet", href="/style/index.css")

block view
  div(class='container w-50')
    ul(class="nav nav-tabs" id="myTab" role="tablist")
      li(class="nav-item")
        a(class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true") Todo
      li(class="nav-item")
        a(class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false") Done

    div(class="tab-content" id="myTabContent")
      div(class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab")
        form(class="form-inline mt-2")
          div(class="form-group mb-2 mr-2")
            label(for="new" class="sr-only") Add new todo
            input(type="text" class="form-control" name="new" id="new-input"  placeholder="Add new todo")
          button(type="button" class="btn btn-primary mb-2" id="new-button") Add
        ul(class="list-group" id="todoList")
          each todo in todos
            li(class="list-group-item" data-id = todo.id)
                div(class="row")
                  div(class="col-auto mr-auto")
                    button(type="button" class="btn btn-info done-button") Done
                    input(class="ml-2 todo-edit" value = todo.name class="ml-2")
                    h4(class="ml-2 todo-name") #{todo.name}
                  div(class="col-auto btn-group" role="group") 
                    button(type="button" class="btn btn-secondary detail-button") detail  
                    button(type="button" class="btn btn-success edit-button") edit
                    button(type="button" class="btn btn-danger delete-button") delete   
      div(class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab")
        h2 HOHO



  div(class="modal" tabindex="-1" role="dialog" id="modalDetail")          
    div(class="modal-dialog" role="document")
      div( class="modal-content" ) 
        div(class="modal-header" )
          h5(class="modal-title") Todo
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") Ã—
        div(class="modal-body")
          h4(id="todoDetail") 
          h6(id="todoCreateDate") 


block scripts
  script(src="/js/modal.js")
  script(src="/js/index.js")


